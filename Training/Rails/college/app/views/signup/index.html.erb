<html>
<head>
<title>User Signup</title>
</head>

<body>

<%= render  "/header" %>

<h1>User Signup</h1>

<h2>Already signed up?<h2>
<h2><a href="/login">Login</a></h2>

<% if @user.errors.any?%>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@user.errors.count, "error") %>
          prohibited your user account from being saved:
        </h2>

        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
<%end%>


<%= form_for @user, :url => { :action => "signup" }, :multipart => true do |f| %>
  
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %><br/>
  
  <%= f.label :email, 'Email' %>
  <%= f.email_field :email%><br/>

  <%= f.label :password, 'Password'%>
  <%= f.password_field :password%><br/>

  <%# do confirm password%>

  <%=f.label :phone, 'Phone number'%>
  <%= f.number_field :phone%><br/>

  <%=f.label :address, 'Street Address'%>
  <%=f.text_area :address%><br/>

  <%= f.select :country, self.options_for_country, { prompt: 'Select country' } %><br/>
  <%= f.select :state, self.options_for_state, { prompt: 'Select state' } %><br/>
  <%= f.select :city, self.options_for_city, { prompt: 'Select city' } %><br/>
  
  
  
  <%=f.label :date_of_birth, 'Date of Birth'%>
  <%=f.date_field :date_of_birth%><br/>

  <%= f.label :gender, 'Gender'%>
  <%= f.radio_button :gender, 'm', :checked => true %>
  <%= f.label :gender, 'Male' %>
  
  <%= f.radio_button :gender, 'f' %>
  <%= f.label :gender, 'Female' %><br/>

  <%= f.check_box :accepted_tos%>
  <%= f.label :accepted_tos, 'Do you accept the Terms & Conditions?'%><br/>

  <%= f.label :image, 'Upload profile Pic'%>
  <%= f.file_field :image ,accept: 'image/png,image/jpeg,image/jpg'%><br/><br/>

  <%= f.submit "Signup" %>

<%end%>

<%= render  "/footer" %>

<body>
</html>